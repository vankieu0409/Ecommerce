

<MudDrawerHeader Class="pa-3 d-flex align-center" Style="background-color: rgba(0,0,0,0.1);">
    <MudIcon Icon="@Icons.Custom.Brands.Linux" Size="Size.Large" Color="Color.Secondary" />
    @if (DrawOpen)
    {
        <MudText Typo="Typo.h5" Color="Color.Secondary" Style="font-weight: 10px" Class="ml-4">141 SNEAKER</MudText>
    }
</MudDrawerHeader>

<!-- Menu chính -->
<MudNavMenu Color="Color.Secondary" Class="py-4" Dense="true">
    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Secondary">Dashboard</MudNavLink>

    @if (DrawOpen)
    {
        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="px-4 mt-4 mb-2">COMPONENTS</MudText>
    }
    <MudNavLink Href="/base" Icon="@Icons.Material.Filled.Layers" IconColor="Color.Secondary">Base</MudNavLink>
    <MudNavLink Href="/sidebar-layouts" Icon="@Icons.Material.Filled.ViewSidebar" IconColor="Color.Secondary">Sidebar Layouts</MudNavLink>
    <MudNavLink Href="/forms" Icon="@Icons.Material.Filled.Edit" IconColor="Color.Secondary">Forms</MudNavLink>
    <MudNavLink Href="/tables" Icon="@Icons.Material.Filled.TableChart" IconColor="Color.Secondary">Tables</MudNavLink>
    <MudNavLink Href="/maps" Icon="@Icons.Material.Filled.Map" IconColor="Color.Secondary">Maps</MudNavLink>
    <MudNavLink Href="/charts" Icon="@Icons.Material.Filled.PieChart" IconColor="Color.Secondary">Charts</MudNavLink>
    <MudNavLink Href="/widgets" Icon="@Icons.Material.Filled.Widgets" IconColor="Color.Secondary">
        Widgets
        <MudBadge Color="Color.Success" Overlap="true" Dot="true" />
    </MudNavLink>
    <MudNavLink Href="/documentation" Icon="@Icons.Material.Filled.Book" IconColor="Color.Secondary">
        Documentation
        <MudChip T="string" Size="Size.Small" Color="Color.Secondary">1</MudChip>
    </MudNavLink>
    <MudNavLink Href="/menu-levels" Icon="@Icons.Material.Filled.Menu" IconColor="Color.Secondary">Menu Levels</MudNavLink>
</MudNavMenu>
@* </MudStack> *@



<style>
    .mud-drawer {
        background-color: #1e1e2d;
        width: 280px;
    }

    .mud-nav-link {
        padding-top: 8px;
        padding-bottom: 8px;
    }

        .mud-nav-link.active {
            background-color: rgba(255,255,255,0.1) !important;
        }

        .mud-nav-link:hover:not(.active) {
            background-color: rgba(255,255,255,0.05) !important;
        }
</style>
