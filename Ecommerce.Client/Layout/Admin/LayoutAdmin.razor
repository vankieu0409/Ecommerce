@using System.Linq.Expressions
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@_toggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
    </MudAppBar>
    <MudDrawer MiniWidth="" @bind-Open="@_drawerOpen"
               Fixed="true"
               Elevation="1"
               Variant=" DrawerVariant.Mini"
               OpenMiniOnHover="true">
        <SidebarAdmin DrawOpen="@_drawerOpen"></SidebarAdmin>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void _toggleDrawer()
    {
        _js.InvokeAsync<object>("console.log", new string("Nhận Event"));
        _drawerOpen = !_drawerOpen;
    }
}
<style>
    .app-bar {
        background-color: #3f51b5; /* Primary color */
        color: white; /* Text color */
    }
</style>