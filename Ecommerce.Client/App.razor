@using Ecommerce.Client.Shared
@using AdminLayout=Ecommerce.Client.Layout.Admin.LayoutAdmin
@inject IJSRuntime _js


<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@GetLayoutType(routeData)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private  Type GetLayoutType(RouteData routeData)
    {
        Console.WriteLine(routeData.ToString());
        _js.InvokeAsync<string>("console.log", routeData);

        return routeData.PageType.FullName.StartsWith("Ecommerce.Client.Admin")
            ? typeof(AdminLayout)
            : typeof(MainLayout);
    }
}