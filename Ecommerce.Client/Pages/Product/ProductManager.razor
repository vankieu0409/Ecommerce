
@page "/"
@layout MainLayout

<MudPaper Class="navigation-paper" Style="margin-top: 230px;">
    <hr style="border: 1px solid lightgray; width: 100%;" />
    <MudContainer MaxWidth="MaxWidth.False" Class="navigation-container">
        <MudList T="string" Class="navigation-menu" Style="display: flex; justify-content: space-around;background-color: white;pading:10px 0">
            <MudListItem Href="/" Style="color: black;">Trang chủ</MudListItem>
            <MudListItem Href="/deals" Style="color: black;">Khuyến mãi</MudListItem>
            <MudListItem Href="/categories" Style="color: black;">Danh mục</MudListItem>
            <MudListItem Href="/products" Style="color: black;">Sản phẩm</MudListItem>
            <MudListItem Href="/contact" Style="color: black;">Liên hệ</MudListItem>
        </MudList>
    </MudContainer>
    <hr style="border: 1px solid orange; width: 100%;" />
</MudPaper>
<MudContainer Class="categories-section" MaxWidth="MaxWidth.False" Style="padding-top: 50px; background-color: #f8f9fa; padding-bottom: 50px;">
    <MudGrid Spacing="3">
        <MudItem xs="12" sm="4">
            <MudPaper Style="position: relative; background-color: transparent; height: 300px; overflow: hidden; border-radius: 15px;">
                <img src="/Image-Index/giaycothap.jpg" alt="Laptop Collection" style="width: 100%; height: 100%; object-fit: cover; filter: brightness(70%);" />
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; color: white; background-color: rgba(255, 0, 0, 0.6); padding: 20px; text-align: center;">
                    <MudText Typo="Typo.h5" Style="font-weight: bold; font-size: 1.5rem; margin-bottom: 10px;">Giày cổ cao</MudText>
                    <MudLink Href="/laptops" Style="font-size: 1.1rem; font-weight: bold; color: white; text-decoration: none; padding-top: 10px;">MUA NGAY ➔</MudLink>
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="4">
            <MudPaper Style="position: relative; background-color: transparent; height: 300px; overflow: hidden; border-radius: 15px;">
                <img src="/Image-Index/giaycothap.jpg" alt="Accessories Collection" style="width: 100%; height: 100%; object-fit: cover; filter: brightness(70%);" />
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; color: white; background-color: rgba(255, 0, 0, 0.6); padding: 20px; text-align: center;">
                    <MudText Typo="Typo.h5" Style="font-weight: bold; font-size: 1.5rem; margin-bottom: 10px;">Giày cổ thấp</MudText>
                    <MudLink Href="/accessories" Style="font-size: 1.1rem; font-weight: bold; color: white; text-decoration: none; padding-top: 10px;">MUA NGAY ➔</MudLink>
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="4">
            <MudPaper Style="position: relative; background-color: transparent; height: 300px; overflow: hidden; border-radius: 15px;">
                <img src="/Image-Index/sliponvansgold.png" alt="Cameras Collection" style="width: 100%; height: 100%; object-fit: cover; filter: brightness(70%);" />
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; color: white; background-color: rgba(255, 0, 0, 0.6); padding: 20px; text-align: center;">
                    <MudText Typo="Typo.h5" Style="font-weight: bold; font-size: 1.5rem; margin-bottom: 10px;">Giày không dây</MudText>
                    <MudLink Href="/cameras" Style="font-size: 1.1rem; font-weight: bold; color: white; text-decoration: none; padding-top: 10px;">MUA NGAY ➔</MudLink>
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="new-products-container">
    <MudText Typo="Typo.h4" Class="new-products-title">Sản phẩm mới</MudText>
    <MudNav MenuIcon="@Icons.Material.Filled.Menu" Class="mud-nav">
        <MudNavLink Href="#" Class="active">Laptops</MudNavLink>
        <MudNavLink Href="#">Smartphones</MudNavLink>
        <MudNavLink Href="#">Cameras</MudNavLink>
        <MudNavLink Href="#">Accessories</MudNavLink>
    </MudNav>

    <MudGrid Spacing="3" Gutter="0">
        @foreach (var product in products)
        {
            <MudItem xs="3">
                <div class="product-card"
                     @onmouseover="() => ShowAddToCart(product.Id)"
                     @onmouseout="() => HideAddToCart(product.Id)">
                    <MudCard Class="product-card-content">
                        <MudCardMedia Image="@product.Image" Alt="Product Image" Class="product-image" />
                        <MudCardContent Class="product-info">
                            <MudText Typo="Typo.caption" Class="product-category">@product.Category</MudText>
                            <MudText Typo="Typo.h6" Class="product-name">@product.Name</MudText>
                            <MudText Typo="Typo.h5" Class="product-price">
                                <span class="sale-price">@product.SalePrice</span>
                                <span class="original-price">@product.OriginalPrice</span>
                            </MudText>
                            <MudRating Value="@product.Rating" ReadOnly="true" MaxValue="5" Class="product-rating" />
                            <div class="product-actions">
                                <MudIconButton Icon="@Icons.Material.Filled.FavoriteBorder" Color="Color.Secondary" />
                                <MudIconButton Icon="@Icons.Material.Filled.CompareArrows" Color="Color.Secondary" />
                                <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Secondary" />
                            </div>
                        </MudCardContent>
                    </MudCard>
                    @if (product.IsHovered)
                    {
                        <MudButton Variant="Variant.Filled" Class="add-to-cart-btn">ADD TO CART</MudButton>
                    }
                </div>
            </MudItem>
        }
    </MudGrid>
</MudContainer>
