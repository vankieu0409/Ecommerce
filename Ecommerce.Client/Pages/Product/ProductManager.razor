@code {
    // Code-behind của layout (nếu cần)
    private List<Product> products = new List<Product>
    {
        new Product { Id = 1, Name = "Giày convers 1970s", SalePrice = "$980.00", OriginalPrice = "$990.00", Category = "Loại 1", Image = "image-url-1.png", Rating = 5 },
        new Product { Id = 2, Name = "Giày vans slipon", SalePrice = "$880.00", OriginalPrice = "$890.00", Category = "Loại 2", Image = "image-url-2.png", Rating = 4 },
        new Product { Id = 3, Name = "Giày convers classic", SalePrice = "$980.00", OriginalPrice = "$990.00", Category = "Loại 3", Image = "image-url-1.png", Rating = 5 },
        new Product { Id = 4, Name = "Giày vans old skool", SalePrice = "$880.00", OriginalPrice = "$890.00", Category = "Loại 4", Image = "image-url-2.png", Rating = 4 },

        // Thêm các sản phẩm khác tại đây...
    };

    // Hàm để hiển thị nút "Add to Cart"
    private void ShowAddToCart(int productId)
    {
        var product = products.FirstOrDefault(p => p.Id == productId);
        if (product != null)
        {
            product.IsHovered = true;
        }
    }

    // Hàm để ẩn nút "Add to Cart"
    private void HideAddToCart(int productId)
    {
        var product = products.FirstOrDefault(p => p.Id == productId);
        if (product != null)
        {
            product.IsHovered = false;
        }
    }
    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string SalePrice { get; set; }
        public string OriginalPrice { get; set; }
        public string Category { get; set; }
        public string Image { get; set; }
        public int Rating { get; set; }
        public bool IsHovered { get; set; } // Trạng thái để theo dõi xem ô có đang được hover không
    }
}

