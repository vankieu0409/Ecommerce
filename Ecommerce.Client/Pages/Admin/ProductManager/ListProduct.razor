@page "/Admin/Products"
@inject NavigationManager NavigationManager
@layout LayoutAdmin


<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">Add Row</MudText>
        <MudSpacer />
        <MudButton Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Href="/Admin/Product/Add" OnClick="@(() => {})">Add Row</MudButton>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@productDtos" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>Brand</MudTh>
                <MudTh>Description</MudTh>
                <MudTh>Price</MudTh>
                <MudTh>SKU</MudTh>
                <MudTh>Is Available</MudTh>
                <MudTh>Gender</MudTh>
                <MudTh>Material</MudTh>
                <MudTh>Style</MudTh>
                <MudTh>Model Type</MudTh>
                <MudTh>Weight</MudTh>
                @* <MudTh>Season</MudTh> *@
                <MudTh>Sole Type</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Brand">@context.Brand</MudTd>
                <MudTd DataLabel="Description">@context.Description</MudTd>
                <MudTd DataLabel="Price">@context.Price.ToString("C")</MudTd>
                <MudTd DataLabel="SKU">@context.SKU</MudTd>
                <MudTd DataLabel="Is Available">@context.IsAvailable</MudTd>
                <MudTd DataLabel="Gender">@context.Gender</MudTd>
                <MudTd DataLabel="Material">@context.Material</MudTd>
                <MudTd DataLabel="Style">@context.Style</MudTd>
                <MudTd DataLabel="Model Type">@context.ModelType</MudTd>
                <MudTd DataLabel="Weight">@context.Weight?.ToString() ?? "N/A"</MudTd>
                @* <MudTd DataLabel="Season">@context.Season</MudTd> *@
                <MudTd DataLabel="Sole Type">@context.SoleType</MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="@(() => NavigateToUpdate(@context.Id))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteProductDto(@context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

<MudDialog @bind-IsVisible="dialogVisible" Options="dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3" /> Add New Employee
        </MudText>
    </TitleContent>
    <DialogContent>
  @*       <MudTextField @bind-Value="newEmployee.Name" Label="Name" />
        <MudTextField @bind-Value="newEmployee.Position" Label="Position" />
        <MudTextField @bind-Value="newEmployee.Office" Label="Office" /> *@
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Add</MudButton>
    </DialogActions>
</MudDialog>

<style>
    .mud-table {
        background-color: transparent;
        border: none;
    }

    .mud-table-container {
        border-radius: 8px;
        overflow: hidden;
    }

    .mud-table-row {
        background-color: white;
    }

        .mud-table-row:nth-child(even) {
            background-color: #f8f9fa;
        }

    .mud-table-cell {
        border: none;
        padding: 16px;
    }

    .mud-table-head {
        background-color: white;
    }

        .mud-table-head .mud-table-cell {
            font-weight: bold;
            color: #333;
        }

    .mud-table-pagination {
        background-color: transparent;
    }

    .mud-button-filled {
        border-radius: 4px;
    }

</style>

