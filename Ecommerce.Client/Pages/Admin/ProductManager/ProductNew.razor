@page "/Admin/prd"
@layout LayoutAdmin
@using Ecommerce.Client.Services.PrdService
@using Ecommerce.Domain.Entities.Products
@inject IPrdService PrdService

<MudText Typo="Typo.h3" GutterBottom="true">Danh sách sản phẩm</MudText>

<MudTable Items="@products" Dense="true" Hover="true" Bordered="true" Striped="true">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Tên sản phẩm</MudTh>
        <MudTh>Giá</MudTh>
        <MudTh>Mô tả</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Tên sản phẩm">@context.Name</MudTd>
        <MudTd DataLabel="Giá">@context.Price.ToString("C")</MudTd>
        <MudTd DataLabel="Mô tả">@context.Description</MudTd>
    </RowTemplate>
</MudTable>

@code {
    private List<Products> products = new List<Products>();

    protected override async Task OnInitializedAsync()
    {
        products = await PrdService.GetAllProducts();
    }
}
